<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoogleCodelab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="switchStyle">

        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimaryLight</item>
        <item name="android:colorBackground">#FF0</item>
    </style>

    <style name="Theme.GoogleCodelab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>